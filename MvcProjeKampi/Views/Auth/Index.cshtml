@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 5%">
                                #
                            </th>
                            <th style="width: 20%">
                                Admin Mail
                            </th>
                            <th style="width: 20%">
                                Yetki
                            </th>
                            <th style="width: 20%">
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.AdminID
                                </td>
                                <td>
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <span class="">@item.AdminUserName</span>

                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="col">
                                        <span class="">@item.AdminRole</span>

                                    </div>
                                </td>
                                <td>
                                    <div class="col">
                                        <span class="">Aktif</span>

                                    </div>
                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/Auth/UpdateAdmin/@item.AdminID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    @*/Auth/DeleteAdmin/@item.AdminID*@
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Pasif Yap
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
<a class="btn btn-info" href="/Auth/AddAdmin/">Yeni Admin Tanımla</a>
